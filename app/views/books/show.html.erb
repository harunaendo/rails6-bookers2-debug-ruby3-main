<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: Book.new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <th><%= render'favorites/favorite', book: @book  %></th>
          <td>コメント数： <%= @book.book_comments.count %></td>
          <!--td><!--%= @book.body %></td.  19行目へ移動-->
          <!--th><!--%= render'favorites/favorite', book: @book  %></th.   20行目へ移動-->
             <% if @book.user == current_user %>
             <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>  <!--edit_book_#{@book.id}を追加-->
             <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>  <!-- destroy_book_#{@book.id}を追加 -->
             <% end %>
        </tr>
      </table>
       <%= render "book_comments/index", book: @book %>
       <%= render "book_comments/comment", book: @book, book_comment: @book_comment %>
    </div>
  </div>
</div>